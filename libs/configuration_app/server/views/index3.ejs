            <!-- DATA TABLE-->
            <section class="p-t-20">
                <div class="container">
                    <div class="row">
                        <div class="col-md-2">
                            <h3 class="title-5 m-b-35" style="white-space: nowrap;">Cycles on: </h3>
                        </div>
                    </div>
                    <div class="row" style="margin-bottom:1.5%">
                        <div class="col-md-3" style="margin-bottom:2.5%">
                            <span id="weekCal"></span>
                        </div>
                        <div class="col-md-7">
                            
                            <label class="align-middle" style="font-size:15px"><i class="zmdi zmdi-comment-alert zmdi-hc-1x"></i> Select one to search on a specific day. You can select mutiple days. Select none to see all cycles</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive table-responsive-data2" id="prev_table">
                            <% if(are_cycles.status){ %>
                                <table class="table table-data2">
                                    <thead>
                                        <tr>
                                            <th class="text-center align-middle">Day</th>
                                            <th class="text-center align-middle">Opening Hour</th>
                                            <th class="text-center align-middle">Duration (On Seconds)</th>
                                            <th class="text-center align-middle">Is Active (Click on it to change it)</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody id="table_body">
                                    <% for(let i =0;i<config.days_of_week.length;i++){ %>
                                        <% for(let j =0;j<config.days_of_week[i].cycles.length;j++){ %>
                                            <tr class="tr-shadow">
                                                <td class="text-center align-middle"><%= config.days_of_week[i].day %></td>
                                                <td class="text-center"><%= config.days_of_week[i].cycles[j].start %></td>
                                                <td class="text-center"><%= config.days_of_week[i].cycles[j].duration %> s</td>
                                                <td class="text-center">
                                                    <%if(config.days_of_week[i].cycles[j].status){%>
                                                        <i class="zmdi zmdi-check zmdi-hc-3x" style="color:green" onclick="change_status(<%=config.days_of_week[i].cycles[j].ID%>, '<%=config.days_of_week[i].day%>', this)"></i>
                                                    <%}else{%>
                                                        <i class="zmdi zmdi-close zmdi-hc-3x" style="color:red" onclick="change_status(<%=config.days_of_week[i].cycles[j].ID%>, '<%=config.days_of_week[i].day%>', this)"></i>
                                                    <%}%>
                                                </td>
                                                <td>
                                                    <div class="table-data-feature">
                                                        <a href="/edit/cycle/<%=config.days_of_week[i].day%>/<%=config.days_of_week[i].cycles[j].ID%>">
                                                        <button class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                                            <i class="zmdi zmdi-edit"></i>
                                                        </button>
                                                        </a>
                                                        <button class="item" data-toggle="tooltip" data-placement="top" title="Delete" onclick="delete_cycle(<%=config.days_of_week[i].cycles[j].ID%>, '<%=config.days_of_week[i].day%>')">
                                                            <i class="zmdi zmdi-delete"></i>
                                                        </button>

                                                    </div>
                                                </td>
                                            </tr>
                                            <tr class="spacer"></tr>
                                        <%}%>
                                    <%}%>
                                    
                                    </tbody>
                                </table>
                                <%}else{%>
                                    <div class="text-center">
                                        <span>No cycles configured</span>
                                    </div>
                                <%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- END DATA TABLE-->

