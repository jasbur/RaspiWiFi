    <script>
        function delete_cycle(ID, day){
            $.ajax({
                url:'/device/delete',
                method:'DELETE',
                data:{
                    cycle_ID:ID,
                    day:day
                }
            }).done(function(data){
                location.reload();
            }).fail(function(err){
                console.log(err);
            })
        }

        function change_status(ID, day, elem){
            let change_status;
            if(elem.getAttribute("class").includes("check")){
                change_status = false;
            }else{
                change_status = true;
            }
            $.ajax({
                url:'/device/set_status',
                method:'PATCH',
                data:{
                    cycle_ID:ID,
                    day:day,
                    new_status:change_status
                }
            }).done(function(data){
                location.reload();
            }).fail(function(err){
                console.log(err);
            })
        }
    </script>
