    <script>
    let get_cycles=[];
    let hour;
    $(".timepicker").picktim({
                                mode: 'h12',
                                defaultValue: '00:00',
                                icons: {
                                        up: 'zmdi zmdi-chevron-up',
                                        down: 'zmdi zmdi-chevron-down'
                                    }
                            });



        $("#weekCal").weekLine({
        mousedownSel: false,
        onChange: function () {
            let get_cycles = [];
                $("#selectedDays").html(
                        $(this).weekLine('getSelected')
                );

                for(let i =0;i<$('.selectedDay').length;i++){
                    get_cycles.push(document.getElementsByClassName("selectedDay").item(i).innerHTML);
                }
        }
        });

        function save_cycle(){
            for(let i =0;i<$('.selectedDay').length;i++){
                get_cycles.push(document.getElementsByClassName("selectedDay").item(i).innerHTML);
            }
            let new_hour = document.getElementById("new_hour").value;
            
            if(get_cycles.length == 0){
                document.getElementById("select_days").setAttribute("style","display:block");
            }else{
            if(new_hour){
                get_cycles = get_cycles.filter( onlyUnique );
            $.ajax({
                url:"/device/new_cycle",
                method:"POST",
                data:{
                    day:get_cycles,
                    hour:new_hour+":00",
                    duration:document.getElementById("new_duration").value,
                    status:document.getElementById("cycle_status").getAttribute("class")
                }
            }).done(function(data){
                get_cycles = [];
                location.replace("/");
            }).fail(function(err){
                console.log(err);
                get_cycles =[];
            })
            }else{
                document.getElementById("select_hour").setAttribute("style","display:block");
            }
        }
        }

        function change_status(){
            let aux = document.getElementById("cycle_status").getAttribute("class");
            if(aux.includes("check")){
                document.getElementById("cycle_status").setAttribute("class","zmdi zmdi-close zmdi-hc-3x")
            }else{
                document.getElementById("cycle_status").setAttribute("class","zmdi zmdi-check zmdi-hc-3x")
            }
            
        }

        function onlyUnique(value, index, self) { 
            return self.indexOf(value) === index;
        }

        function verif_duration(elem){
            if(elem.value<0){
                elem.value = 0;
            }
            
            if(elem.value>999){
                elem.value = 999;
            }
        }

    </script>
